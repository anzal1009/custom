                <template id="purchase_order_report">
                    <t t-call="web.external_layout">

                        <t t-foreach="docs" t-as="o">

                            <!--                    <t t-set="o" t-value="o.with_context({'lang':o.user_id.lang})" />-->
                            <div class="page" style="font-size: 15px !important;">
                                <div class="line">


                                    <table align="center" style="width:100%;" border="1px solid black"
                                           cellspacing="0">
                                        <thead>
                                            <tr>
                                                <td style="text-align: center">SlNo.</td>
                                                <td style="text-align: center">Description of Goods</td>
                                                <td style="text-align: center">HSN/SAC</td>
                                                <td style="text-align: center">Quantity</td>
                                                <td style="text-align: center">Per</td>
                                                <td style="text-align: center">Rate</td>
                                                <td style="text-align: center">Tax</td>
                                                <td style="text-align: center">Disc. %</td>
                                                <td style="text-align: center">Amount</td>
                                            </tr>
                                        </thead>
                                        <t t-set="slno" t-value="0"/>
                                        <tbody>
                                            <t t-foreach="o.invoice_line_ids" t-as="order_line">
                                                <t t-set="slno" t-value="slno + 1"/>
                                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                                                    <t t-if="not order_line.display_type">
                                                        <td><span class="text-nowrap"
                                                                      t-esc="slno"/></td>
                                                        <td id="product">
                                                            <span t-field="order_line.name"/>
                                                        </td>
                                                        <td></td>
                                                        <td>
                                                            <span t-field="order_line.quantity"/>
                                                        </td>
                                                        <td>
                                                            <span t-field="order_line.product_uom_id"/>
                                                        </td>
                                                        <td>
                                                            <span t-field="order_line.price_unit"/>
                                                        </td>
                                                        <td>
                                                            <span t-field="order_line.tax_ids"/>
                                                        </td>
                                                        <td>0%</td>

                                                        <td>
                                                            <span t-field="order_line.price_subtotal"/>
                                                        </td>

                                                    </t>
                                                </tr>
                                            </t>

                                            <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>

                                            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                                <tr>
                                                    <td colspan="7" style="border-right: 1px solid black; border-bottom:1px solid white; border-top:1px solid black; border-left:1px solid black;"></td>
<!--                                                    <td style="border-right: 1px solid black; border-bottom:1px solid white; border-top:1px solid black; border-left:1px solid black;"></td>-->
                                                    <td style="border: 1px solid black;" >
                                                        <strong t-esc="subtotal['name']"/>
                                                    </td>
<!--                                                    <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid black; border-left:1px solid white;"></td>-->
<!--                                                    <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid black; border-left:1px solid black;"></td>-->
<!--                                                    <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid black; border-left:1px solid black;"></td>-->
<!--                                                    <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid black; border-left:1px solid black;"></td>-->
<!--                                                    <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid black; border-left:1px solid black;"></td>-->
                                                    <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid black; border-left:1px solid black;text-align: right;">
                                                        <span t-esc="subtotal['formatted_amount']"/>
                                                    </td>
                                                </tr>
                                            </t>

                                                <t t-foreach="tax_totals['groups_by_subtotal']['Untaxed Amount']"
                                                   t-as="amount_by_group">
<!--                                                    <t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) > 1">-->
                                                        <tr>
                                                            <td colspan="7" style="border-right: 1px solid black; border-bottom:1px solid white; border-top:1px solid white; border-left:1px solid black;"></td>
<!--                                                            <td style="border-right: 1px solid black; border-bottom:1px solid white; border-top:1px solid white; border-left:1px solid black;"></td>-->
                                                            <td style="border: 1px solid black;">
                                                                <span t-esc="amount_by_group['tax_group_name']"/>
                                                            </td>
<!--                                                            <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid white; border-left:1px solid white;"></td>-->
<!--                                                            <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid white; border-left:1px solid black;"></td>-->
<!--                                                            <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid white; border-left:1px solid black;"></td>-->
<!--                                                            <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid white; border-left:1px solid black;"></td>-->
<!--                                                            <td style="border-right: 1px solid black; border-bottom:1px solid black; border-top:1px solid white; border-left:1px solid black;"></td>-->
                                                            <td style="border: 1px solid black;text-align: right;">
                                                                <span class="text-nowrap"
                                                                      t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                            </td>
                                                        </tr>
<!--                                                    </t>-->
                                                </t>


                                            <tr>

                                                <td colspan="7"></td>
<!--                                                <td></td>-->
                                                <td>Total</td>
<!--                                               >-->

                                                <!--                                                <t t-foreach="o.tax_totals_json" t-as="tax_totals"/>-->
                                                <td style="text-align: right;">
                                                    <span t-esc="tax_totals['formatted_amount_total']"/>
                                                    <!--                                                                                                                <span t-field="o.tax_totals_json"/>-->
                                                </td>
                                                <!--                                                </t>-->
                                            </tr>



                                            <tr>
                                                <td colspan="9">Amount Chargeable (in words)
                                                    <br/>
                                                    <b>Rupees Six Lakh Seventeen Thousand One Hundred
                                                        Forty Only
                                                    </b>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </t>
                    </t>


                </template>


            </body>
