<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="inherit_assets_fields" model="ir.ui.view">
        <field name="name">account.asset.asset.inherit</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="base_accounting_kit.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="assets_type"/>
            </xpath>
            <xpath expr="//field[@name='date']" position="after">
                <field name="assets_qty"/>
            </xpath>

            <xpath expr="//field[@name='date']" position="after">
                <field name="assets_no"/>
            </xpath>
            <xpath expr="//field[@name='date']" position="after">
                <field name="assets_dtls"/>
            </xpath>
            <xpath expr="//field[@name='date']" position="after">
                <field name="assets_loc"/>
            </xpath>
            <xpath expr="//field[@name='invoice_id']" position="after">
                <field name="assets_dept"/>
            </xpath>
             <xpath expr="//field[@name='invoice_id']" position="after">
                <field name="assets_grp"/>
            </xpath>


        </field>
    </record>

</odoo>



