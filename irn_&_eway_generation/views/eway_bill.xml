<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="eway_button_inherit" model="ir.ui.view">
            <field name="name">account.move.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_register_payment']" position="before">
                    <button name="action_generate_e_way" string="Generate E WAY" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                </xpath>
            </field>
        </record>
        <record id="eway_inherit" model="ir.ui.view">
            <field name="name">account move Eway Inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
                        <field name="done"
                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <field name="eway"
                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <!--                        <field name="Success"-->
                        <!--                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>-->
                        <!--                        <field name="AckNo"-->
                        <!--                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>-->
                        <!--                        <field name="AckDt"-->
                        <!--                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>-->
                        <!--                        <field name="Status"-->
                        <!--                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>-->
                        <!--                        <field name="govt_log"-->
                        <!--                               style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;"-->
                        <!--                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>-->
                        <field name="EwbNo"
                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <field name="EwbDt"
                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <field name="EwbValidTill"
                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <!--                        <field name="log"-->
                        <!--                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>-->
                    </xpath>
                </data>
                <notebook position="inside">
                    <page name="irn_field" string="IRN And E-Way Info"
                          attrs="{'invisible':['|',('move_type','!=','out_invoice'),('state', '!=', 'posted'),('state', '!=', 'draft')]}">

                        <h5 style="color:black;">E Way Bill Details</h5>
                        <group col="4" colspan="4" name="other_detail">
                            <field name="TransId"/>
                            <field name="TransName"/>
                            <field name="Distance"/>
                            <field name="TransDocNo"/>
                            <field name="TransDocDt"/>
                            <field name="VehNo"/>
                            <field name="VehType"/>
                            <field name="TransMode"/>
                            <field name="dist"/>
                            <field name="Loc"/>
                            <field name="Stcd"/>
                            <field name="disloc"/>
                            <field name="disstc"/>


                        </group>

                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>