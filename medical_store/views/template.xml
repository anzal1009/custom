<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="medical_products" name="Medical Products">
        <t t-call="website.layout">
            <div class="container">

                <h1>
                    Product details
                </h1>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td>
                                <h2>
                                   Name
                                </h2>

                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="products" t-as="products">
                            <tr>
                                <td>
                                     <t t-esc="products.name"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

           </div>
        </t>
    </template>

</odoo>
