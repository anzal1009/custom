<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="print_button_inherit" model="ir.ui.view">
            <field name="name">account.move.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_register_payment']" position="before">
                    <button name="action_generate_irn" string="Generate IRN" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                </xpath>
                <xpath expr="//header/button[@name='action_generate_irn']" position="after">
                     <button name="action_print_inv" string="Print E-Invoice" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                </xpath>
<!--                <xpath expr="//header/button[@name='action_print_inv']" position="after">-->
<!--                     <button name="action_print_e_way" string="Print E-Way" type="object" class="oe_highlight"-->
<!--                            attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>-->
<!--                </xpath>-->




            </field>
        </record>
        <record id="irn_inherit" model="ir.ui.view">
            <field name="name">account move Irn Inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='journal_div']" position="after">
                        <!--                        <group style="width:900px" col="5" colspan="5" name="other_detail"-->
                        <!--                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}">-->
                        <field name="Success" readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <field name="AckNo" readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <field name="AckDt" readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <field name="Status" readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <field name="govt_log" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;" readonly="1"
                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                    </xpath>
                    <xpath expr="//div[@class='oe_title']" position="after">
                        <group>
                            <field name="qr_code" widget="image" class="oe_right oe_avatar" readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                            <field name="Irn" readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                            <field name="SignedInvoice"
                                   style="width: 50vw !important; word-wrap: break-word; display: -webkit-box; -webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden;"
                            readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        </group>
                    </xpath>
                    <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
                        <!--                        <group style="width:900px" col="5" colspan="5" name="other_detail7"-->
                        <!--                               attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}">-->
                        <field name="EwbNo" readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <field name="EwbDt" readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <field name="EwbValidTill" readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <field name="log" readonly="1" attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}"/>
                        <!--                        </group>-->
                    </xpath>
                </data>
                 <notebook position="inside">
                    <page name="irn_field" string="irn fields"
                          attrs="{'invisible': ['|',('move_type','!=','out_invoice'),('state', '!=', 'posted')]}">
                        <h5 style="color:blue;">Transaction Details</h5>
                        <group col="4" colspan="4" name="other_detail">
                            <field name="tax_sh"/>
                            <field name="sup_typ"/>
                            <field name="reg_rev"/>
                            <field name="ecm_gstin"/>
                            <field name="igst_on_intra"/>
                            <field name="partner"  domain="[('street','=','EASTERN MATTRESSES (P) LTD')]"/>
                        </group>
                        <table style="width:100%;" border="1px solid black" cellspacing="0">
                            <tr>
                                <td style="border-top:1px solid white; border-left:1px solid white; border-bottom:1px solid black;border-right:1px solid white;">
                                </td>
                            </tr>
                        </table>
                        <br></br>
                        <br></br>
                        <h5 style="color:blue;">Dispatch Details</h5>
                        <group col="4" colspan="4" name="other_detail">
                            <field name="name1"/>
                            <field name="Addr_1"/>
                            <field name="Addr_2"/>
                            <field name="loc"/>
                            <field name="pin"/>
                            <field name="stcd"/>
                        </group>
                        <table style="width:100%;" border="1px solid black" cellspacing="0">
                            <tr>
                                <td style="border-top:1px solid white; border-left:1px solid white; border-bottom:1px solid black;border-right:1px solid white;">
                                </td>
                            </tr>
                        </table>
                        <br></br>
                        <br></br>
                        <h5 style="color:blue;">Shipping Details</h5>
                        <group col="4" colspan="4" name="other_detail">
                            <field name="Gstin"/>
                            <field name="LglNm"/>
                            <field name="TrdNm"/>
                            <field name="Addrs1"/>
                            <field name="Addrs2"/>
                            <field name="Loc1"/>
                            <field name="Pin1"/>
                            <field name="stcd1"/>
                        </group>
                        <!--                         <h5>Val Details</h5>-->
                        <!--                        <group col="4" colspan="4" name="other_detail">-->
                        <!--                            <field name="AssVal"/>-->
                        <!--                            <field name="CgstVal"/>-->
                        <!--                            <field name="SgstVal"/>-->
                        <!--                            <field name="IgstVal"/>-->
                        <!--                            <field name="CesVal"/>-->
                        <!--                            <field name="StCesVal"/>-->
                        <!--                            <field name="Discount"/>-->
                        <!--                            <field name="OthChrg"/>-->
                        <!--                            <field name="RndOffAmt"/>-->
                        <!--                            <field name="TotInvVal"/>-->
                        <!--                            <field name="TotInvValFc"/>-->
                        <!--                        </group>-->
                        <!--                        <h5>Payment Details</h5>-->
                        <!--                        <group col="4" colspan="4" name="other_detail">-->
                        <!--                            <field name="name3"/>-->
                        <!--                            <field name="AccDet"/>-->
                        <!--                            <field name="Mode"/>-->
                        <!--                            <field name="FinInsBr"/>-->
                        <!--                            <field name="PayTerm"/>-->
                        <!--                            <field name="PayInstr"/>-->
                        <!--                            <field name="CrTrn"/>-->
                        <!--                            <field name="DirDr"/>-->
                        <!--                            <field name="CrDay"/>-->
                        <!--                            <field name="PaidAmt"/>-->
                        <!--                            <field name="PaymtDue"/>-->
                        <!--                        </group>-->
                        <table style="width:100%;" border="1px solid black" cellspacing="0">
                            <tr>
                                <td style="border-top:1px solid white; border-left:1px solid white; border-bottom:1px solid black;border-right:1px solid white;">
                                </td>
                            </tr>
                        </table>
                        <br></br>
                        <br></br>
                        <h5 style="color:blue;">Export Details</h5>
                        <group col="4" colspan="4" name="other_detail">
                            <field name="ShipBNo"/>
                            <field name="ShipBDt"/>
                            <field name="Port"/>
                            <field name="RefClm"/>
                            <field name="ForCur"/>
                            <field name="CntCode"/>
                        </group>
                        <table style="width:100%;" border="1px solid black" cellspacing="0">
                            <tr>
                                <td style="border-top:1px solid white; border-left:1px solid white; border-bottom:1px solid black;border-right:1px solid white;">
                                </td>
                            </tr>
                        </table>
                        <br></br>
                        <br></br>
                        <h5 style="color:blue;">E Way Bill Details</h5>
                        <group col="4" colspan="4" name="other_detail">
                            <field name="TransId"/>
                            <field name="TransName"/>
                            <field name="Distance"/>
                            <field name="TransDocNo"/>
                            <field name="TransDocDt"/>
                            <field name="VehNo"/>
                            <field name="VehType"/>
                            <field name="TransMode"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>

