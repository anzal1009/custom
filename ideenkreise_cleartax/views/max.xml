<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="print_button_inherit" model="ir.ui.view">
            <field name="name">account.move.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_register_payment']" position="before">
                    <button name="action_generate_maxitc" string="Generate Max itc" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|',('move_type','!=','in_invoice'),('state', '!=', 'posted')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>